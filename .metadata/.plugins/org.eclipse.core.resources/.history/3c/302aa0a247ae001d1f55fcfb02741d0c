//2nd approach: using character array:
	String str = "Bhivaji";
	String rev = "";
	char a[] =str.toCharArray();
	 int len=a.length;
	 for(int i=len-1; i>=0; i--) {
		rev= rev+a[i];
	 }
	 System.out.println("Reverse string:" +rev);
	}
}