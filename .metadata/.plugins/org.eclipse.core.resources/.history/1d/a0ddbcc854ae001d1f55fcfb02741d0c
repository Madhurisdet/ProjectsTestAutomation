package programPractice;

public class CountEvenOddNumber {
	public static void main(String[] args) {
		int num =23453;
		int evenCount =0;
		int oddCount = 0;
		int rem = 0;
		
		while(num>0)
		{
			rem = num%10;
			if(rem%2 == 0)
			{
				evenCount++;
			}
			else 
			{
				oddCount++;
			}
			num = num/10;
		}
			
		
	}
}
